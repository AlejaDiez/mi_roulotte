<script>
    const header = document.body.querySelector(".header")!;
    const links = header.querySelectorAll<HTMLAnchorElement>(".menu a");
    const toggleButton =
        header.querySelector<HTMLButtonElement>(".menu-toggle")!;

    window.addEventListener("hashchange", () => {
        for (const link of links) {
            if (window.location.href.includes(link.href)) {
                link.classList.replace("button-muted", "button-primary");
            } else {
                link.classList.replace("button-primary", "button-muted");
            }
        }
    });
    window.dispatchEvent(new Event("hashchange"));
    toggleButton.addEventListener("click", () => {
        header.classList.toggle("expanded");
    });
    window.addEventListener("resize", () => {
        if (window.innerWidth >= 48 * 16) {
            header.classList.remove("expanded");
        }
    });
</script>
